<h3>カテゴリ一覧・追加</h3>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <h5 class="card-header text-center">カテゴリの追加</h5>
      <div class="card-body">
        <%= form_with model:[:manager, @genre],local: true do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <%= f.label :カテゴリ画像 %></br>
            <%= f.attachment_field :genre_image %>
          </div>
          <div class="form-group">
            <%= f.label :カテゴリ名 %></br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-12" %>
          </div>
          <div class="form-group">
            <%= f.submit "カテゴリを追加", class: "btn btn-primary col-md-12" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>カテゴリ画像</th>
          <th>カテゴリ名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= attachment_image_tag genre, :genre_image,format:'jpg', size: "70x70", fallback: "noimage.jpg"%></td>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_manager_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

