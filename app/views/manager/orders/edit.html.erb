<h3>注文詳細</h3>

<div class="row">
  <div class="col-md-12">
    <div class="card mb-3">
    <h5 class="card-header">
      購入者 : <%= @order.member.name %>
    </h5>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4">
            <h5>お届け先住所</h5>
            <%= @order.address_name %></br>
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.phone_number %>
          </div>
          <div class="col-md-4">
            <h5>請求詳細</h5>
            送料:　　 <%= @postage %>円</br>
            商品小計: <%= @total_price.to_s(:delimited) %>円</br>
            請求金額: <%= @payment.to_s(:delimited) %>円
          </div>
          <div class="col-md-4">
            <h5>配送状況</h5>
            <%= form_with model:[:manager, @order],local: true do |f| %>
            <div class="form-group">
              <%= f.label :delivery, "配送準備中", value: true %>
              <%= f.radio_button :delivery, :true %>
            </div>
            <div class="form-group">
              <%= f.label :delivery, "配送済み", value: false %>
              <%= f.radio_button :delivery, :false %>
            </div>
            <div class="form-group">
              <%= f.submit "配送状況を更新する", class: "btn btn-primary col-md-12" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead class="bg-light">
        <tr>
          <th>商品画像</th>
          <th>商品詳細</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= attachment_image_tag order_detail.item, :item_image, size: "60x60", fallback: "/assets/noimage.jpg" %></td></td>
            <td>
              <%= order_detail.item.name %></br>
              <%= order_detail.item.price.to_s(:delimited) %>円</td>
            <td><%= order_detail.quantity %>個</td>
            <td><%= (order_detail.item.price * order_detail.quantity).to_s(:delimited) %>円</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>