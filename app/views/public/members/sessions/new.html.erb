<div class="row mt-5">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <h5 class="card-header text-center">ログイン</h5>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス %></br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %></br>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-md-12" %>
          </div>
          <div class="form-group">
            <%= f.submit "ログイン", class: "btn btn-success col-md-12" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <h5 class="card-header text-center">登録がお済みでない方</h5>
      <div class="card-body">
        <%= link_to "新規登録", new_public_member_registration_path, class: "btn btn-info col-md-12" %>
      </div>
    </div>
  </div>
</div>
