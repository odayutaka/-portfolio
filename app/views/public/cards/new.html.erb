<div class="row mt-5">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <h5 class="card-header text-center">クレジットカード情報を登録する</h5>
      <div class="card-body">
        <%= form_with model:[:public, @card], id: "form" do |f| %>
          <div class="form-group">
            <%= f.label "カード番号" %></br>
            <%= f.text_field :card_number, name: "card_number", id: "card_number", type: "text", placeholder: '半角数字のみ', maxlength: "16", class: "col-md-12" %>
          </div>
          <div class="form-group">
            <%= image_tag(image_path('visa.png'), width: 48, height: 34) %>
            <%= image_tag(image_path('master_card.png'), width: 48, height: 34) %>
            <%= image_tag(image_path('jcb.png'), width: 48, height: 34) %>
            <%= image_tag(image_path('american_express.png'), width: 48, height: 34) %>
            <%= image_tag(image_path('diners_club.png'), width: 48, height: 34)%>
            <%= image_tag(image_path('discover.png'), width: 48, height: 34) %>
          </div>
          <div class="form-group">
            <%= f.label "有効期限" %></br>
            <%= f.select :exp_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]], {}, name: "exp_year", id:"exp_year", class: "col-md-6" %>
            <span>年</span>
            <%= f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{}, name: "exp_month", id:"exp_month", class: "col-md-6" %>
            <span>月</span>
          <div class="form-group">
            <%= f.label "セキュリティーコード" %></br>
            <%= f.text_field :cvc, name: "cvc", id:"cvc", class:"cvc", type: "text", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "16", class: "col-md-12" %>
          </div>
          <div class="form-group">
            <%= f.submit "クレジットカードを登録する", class: "btn btn-success col-md-12",id: "token_submit" %>
          </div>
        <% end %>
        <%= link_to "登録せずクレジットカード一覧に戻る", public_cards_path, class: "btn btn-info col-md-12 mb-2" %>
      </div>
    </div>
  </div>
</div>
